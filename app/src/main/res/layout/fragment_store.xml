<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_banner" />

    <ImageView
        android:id="@+id/sprites_character"
        android:layout_width="282dp"
        android:layout_height="204dp"
        android:layout_below="@id/img_banner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-180dp"
        android:src="@drawable/character1_128" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sprites_character"
        android:layout_marginHorizontal="10sp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15sp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Store" />

            <LinearLayout
                android:id="@+id/row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_store"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:background="@drawable/rectangle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/character1_128"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/buy_c1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-10dp"
                        android:drawableLeft="@drawable/ic_coins"
                        android:text="100"
                        android:textSize="9sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/rectangle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/character2_128"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/buy_c2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-10dp"
                        android:drawableLeft="@drawable/ic_coins"
                        android:text="100"
                        android:textSize="9sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:background="@drawable/rectangle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/character3_128"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/buy_c3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-10dp"
                        android:drawableLeft="@drawable/ic_coins"
                        android:text="100"
                        android:textSize="9sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_1"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:background="@drawable/rectangle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/character4_128"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/buy_c4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-10dp"
                        android:drawableLeft="@drawable/ic_coins"
                        android:text="100"
                        android:textSize="9sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/rectangle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/character5_128"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/buy_c5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-10dp"
                        android:drawableLeft="@drawable/ic_coins"
                        android:text="100"
                        android:textSize="9sp" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>